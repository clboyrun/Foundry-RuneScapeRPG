<form class="actor-sheet" autocomplete="off">
  <header class="sheet-header">
    <h1>{{actor.name}}</h1>
  </header>

  <section class="sheet-body">
    <div class="skills">
    <h3>Skills</h3>
<!-- Loop through the Skills -->
<details class="debug-section">
  <summary>▶️ Show Debug Data</summary>
  <pre>{{json actor.system}}</pre>
</details>

{{#each actor.system.skills}}
  <h4 class="skill-name">{{@key}}</h4>
  <p>Min: {{this.min}}</p>
  <p>Value: {{this.value}}</p>
  <p>Max: {{this.max}}</p>
{{/each}}
    </div>
  </section>
</form>
